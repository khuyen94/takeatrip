@model ForgotPasswordViewModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Forgot Password";
}

<form asp-action="ForgotPassword" method="post" id="forgot-pw">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group adding-icon-before">
        <label asp-for="Email">Please confirm login email below</label>
        <input asp-for="Email" class="form-control">
        <span asp-validation-for="Email" class="text-danger"></span>
        <i class="icon_mail_alt"></i>
    </div>
    <p>You will receive an email containing a link allowing you to reset your password to a new preferred one.</p>
    <button type="submit" class="btn_1 full-width">Reset Password</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
