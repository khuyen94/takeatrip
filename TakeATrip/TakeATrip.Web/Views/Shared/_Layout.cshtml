<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TakeATrip</title>

    <!-- Favicons-->
    <link rel="shortcut icon" href="~/img/favicon.ico" type="image/x-icon">
    <link rel="apple-touch-icon" type="image/x-icon" href="~/img/apple-touch-icon-57x57-precomposed.png">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="72x72" href="~/img/apple-touch-icon-72x72-precomposed.png">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="114x114" href="~/img/apple-touch-icon-114x114-precomposed.png">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="144x144" href="~/img/apple-touch-icon-144x144-precomposed.png">

    <!-- BASE CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
    <link href="~/css/vendors.css" rel="stylesheet">
    <link href="~/css/icon_fonts/css/all_icons.min.css" rel="stylesheet">

    <!-- SPECIFIC CSS -->
    <link href="~/css/daterangepicker.css" rel="stylesheet">

    <!-- ALTERNATIVE COLORS CSS -->
    <link href="~/css/color-green.css" id="colors" rel="stylesheet">

    <!-- YOUR CUSTOM CSS -->
    <link href="~/css/custom.css" rel="stylesheet">

    @{
        var isAuthenticated = User.Identity.IsAuthenticated;
    }

</head>
<body>
    <div id="page">
        <header class="header menu_fixed">
            <div id="preloader"><div data-loader="circle-side"></div></div><!-- /Page Preload -->
            <div id="logo">
                <a asp-action="Index" asp-controller="Home">
                    <img src="~/img/logo.png" width="150" height="36" data-retina="true" alt="" class="logo_normal">
                    <img src="~/img/logo_sticky.png" width="150" height="36" data-retina="true" alt="" class="logo_sticky">
                </a>
            </div>
            <ul id="top_menu">
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a asp-controller="Order" asp-action="YourCart" class="cart-menu-btn" title="Cart"><strong id="totalCartItem">0</strong></a></li>
                    <li><a href="wishlist.html" class="wishlist_bt_top" title="Your wishlist">Your wishlist</a></li>
                }
                else
                {
                    <li><a asp-controller="Account" asp-action="Login" class="login" title="Sign In">Sign In</a></li>
                }
            </ul>
            <!-- /top_menu -->
            <a href="#menu" class="btn_mobile">
                <div class="hamburger hamburger--spin" id="hamburger">
                    <div class="hamburger-box">
                        <div class="hamburger-inner"></div>
                    </div>
                </div>
            </a>
            <nav id="menu" class="main-menu">
                <ul>
                    <li>
                        <span><a asp-controller="Tour" asp-action="Index">Tours</a></span>
                    </li>
                    <li>
                        <span><a asp-controller="Hotel" asp-action="Index">Hotels</a></span>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                        {
                            <li>
                                <div><form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm"></form></div>
                                <span><a asp-controller="Manage" asp-action="Profile">@User.Identity.Name</a></span>
                                <ul>
                                    <li><a asp-controller="Manage" asp-action="Profile">Profile</a></li>
                                    <li><a href="index-2.html">Inbox</a></li>
                                    <li><a href="javascript:document.getElementById('logoutForm').submit();">Logout</a></li>
                                </ul>
                            </li>


                        }
                </ul>
            </nav>
        </header>
    </div>
    <main>
        @RenderBody()
    </main>

    <footer>
        <div class="container margin_60_35">
            <div class="row">
                <div class="col-lg-5 col-md-12 p-r-5">
                    <p><img src="~/img/logo.png" width="150" height="36" data-retina="true" alt=""></p>
                    <p>
                        TakeATrip is not a booking agent or tour operator, and does not charge any service fees to users of our site.
                        Our partners (airlines, travel providers, and booking agents) who list airfare, tours, and travel packages on
                        TakeATrip are required to include all fees and surcharges in their listed prices.
                    </p>
                    <div class="follow_us">
                        <ul>
                            <li>Follow us</li>
                            <li><a href="#0"><i class="ti-facebook"></i></a></li>
                            <li><a href="#0"><i class="ti-twitter-alt"></i></a></li>
                            <li><a href="#0"><i class="ti-google"></i></a></li>
                            <li><a href="#0"><i class="ti-pinterest"></i></a></li>
                            <li><a href="#0"><i class="ti-instagram"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 ml-lg-auto">
                    <h5>Useful links</h5>
                    <ul class="links">
                        <li><a asp-controller="Home" asp-action="About">About</a></li>
                        <li><a asp-controller="Account" asp-action="Login">Login</a></li>
                        <li><a asp-controller="Account" asp-action="Register">Register</a></li>
                        <li><a asp-controller="Home" asp-action="Contact">Contacts</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h5>Contact with Us</h5>
                    <ul class="contacts">
                        <li><a href="tel://61280932400"><i class="ti-mobile"></i> + 61 23 8093 3400</a></li>
                        <li><a href="mailto:info@takeatrip.com"><i class="ti-email"></i> info@takeatrip.com</a></li>
                    </ul>
                </div>
            </div>
            <!--/row-->
            <hr>
            <div class="row">
                <div class="col-lg-6">
                    <ul id="footer-selector">
                        <li>
                            <div class="styled-select" id="lang-selector">
                                <select>
                                    <option value="English" selected>English</option>
                                    <option value="French">French</option>
                                    <option value="Spanish">Spanish</option>
                                    <option value="Russian">Russian</option>
                                </select>
                            </div>
                        </li>
                        <li>
                            <div class="styled-select" id="currency-selector">
                                <select>
                                    <option value="US Dollars" selected>US Dollars</option>
                                    <option value="Euro">Euro</option>
                                </select>
                            </div>
                        </li>
                        <li><img src="~/img/cards_all.svg" alt=""></li>
                    </ul>
                </div>
                <div class="col-lg-6">
                    <ul id="additional_links">
                        <li><a href="#0">Terms and conditions</a></li>
                        <li><a href="#0">Privacy</a></li>
                        <li><span>© 2018 TakeATrip</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <div id="toTop"></div><!-- Back to top button -->
    <!-- COMMON SCRIPTS -->
    <script src="~/js/jquery-2.2.4.min.js"></script>
    <script src="~/js/common_scripts.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/assets/validate.js"></script>

    @if (User.Identity.IsAuthenticated)
    {
        <script>
            $.get("/Order/GetTotalItem", function (data, status) {
                $('#totalCartItem').text(data);
            });
        </script>
    }

    @RenderSection("Scripts", required: false)
</body>
</html>
