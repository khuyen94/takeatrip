@model TakeATrip.Services.Models.TourModels.TourPage;



<div class="container margin_60_35">
    <div class="col-lg-12">
        <div class="row no-gutters custom-search-input-2 inner">
            <div class="col-lg-4">
                <div class="form-group">
                    <input asp-for="SearchText" class="form-control" type="text" placeholder="What are you looking for...">
                    <i class="icon_search"></i>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="form-group">
                    <input asp-for="Locations" class="form-control" type="text" placeholder="Where">
                </div>
            </div>
            <div class="col-lg-3">
                @*<select class="wide" asp-for="TourType">
                    @foreach (var item in Model.TourTypeItem)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>*@
            </div>
            <div class="col-lg-2">
                <input type="submit" name="btn-search" class="btn-search" value="Search">
            </div>
        </div>
        <!-- /row -->
    </div>
    <div class="wrapper-grid">
        @if (Model.TotalCount > 0)
        {
            var rowIndex = 1;
            <div class="box-result">
                <table class="table table-bordered table-hover" style="background-color:white">
                    <thead>
                        <tr style="color:darkgray">
                            <th>S/No</th>
                            <th>Tour Name</th>
                            <th>Status</th>
                            <th>Created Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr class="news-row" data-user-id="@item.Id" style="color:black">
                                <td>@(Model.PageIndex * Model.PageSize + rowIndex)</td>
                                <td><a href="@Url.Action("Update", "Tour", new { id = item.Id })">@item.TourName</a></td>
                                <td>@item.Status</td>

                                <td>@item.CreatedDate</td>

                            </tr>
                            rowIndex++;
                        }
                    </tbody>
                </table>
                <partial name="_PageNavigationPartial" model="Model" />
            </div>
        }
    </div>
    <!-- /wrapper-grid -->
</div>


