@model TakeATrip.Services.Models.TourModels.TourPage;
<div class="isotope-wrapper">
    <input asp-for="ViewType" class="form-control" type="text" hidden="hidden">
    @foreach (var item in Model.Items)
    {
        <div class="box_list isotope-item popular">
            <div class="row no-gutters">
                <div class="col-lg-5">
                    <figure>
                        <small>@item.TourType</small>
                        <a asp-controller="Tour" asp-action="Detail" asp-route-id="@item.Id"><img src="@item.Img" class="img-fluid" alt="" width="800" height="533"><div class="read_more"><span>Read more</span></div></a>
                    </figure>
                </div>
                <div class="col-lg-7">
                    <div class="wrapper">
                        <a href="#0" class="wish_bt"></a>
                        <h3><a asp-controller="Tour" asp-action="Detail" asp-route-id="@item.Id">@item.TourName</a></h3>
                        <p>@item.ShortContent</p>
                        <span class="price">From <strong>@item.Price</strong></span>
                    </div>
                    <ul>
                        <li><i class="icon_clock_alt"></i> 1h 30min</li>
                        <li><div class="score"><span>Rate<em>@item.Views reviews</em></span><strong>@item.Rates</strong></div></li>
                    </ul>
                </div>
            </div>
        </div>
    }
    <input asp-for="PageIndex" class="form-control" type="text" hidden="hidden">
</div>
